[flake8]
max-line-length = 79
; extend-ignore = E203,W503,C901,E402
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    dnallm/tasks/metrics/
per-file-ignores =
    # Tests can use magic values, assertions, and relative imports
    tests/**/*.py: S101,S106,S108,PLR2004,TID252,F401,F403,F841
